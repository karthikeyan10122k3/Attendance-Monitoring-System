<link rel="stylesheet" href="/css/signin.css">    
<div class="background"></div>
<div class="container">

    <div class="login-box">
        <h1>Log-In</h1>
        <form class="login-form" action="/staff/create-session" method="post">
            
            <div class="input-container">
                <input type="text" class="text-input" id="username" autocomplete="off" placeholder="" name="username"  required>
                <label for="username" class="label">Username</label>
            </div>

            <div class="input-container">
                <input type="password" class="text-input" id="password" name="password" placeholder="" required>
                <label for="Password" class="label">Password</label>
            </div>
            
            <button onclick="validateForm()" type="submit">Log-In</button>
        </form>
        <div class="signup-link">
            <p>Don't have an account? <a href="/staff/sign-up">Sign up here</a></p>
        </div>
           
    </div>
</div>

